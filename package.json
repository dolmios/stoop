{
  "name": "stoop-monorepo",
  "description": "Build-time CSS-in-JS with Stitches ergonomics. Zero runtime. SWC-powered.",
  "version": "1.0.0",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dolmios/stoop.git"
  },
  "bugs": {
    "url": "https://github.com/dolmios/stoop/issues"
  },
  "homepage": "https://github.com/dolmios/stoop#readme",
  "dependencies": {
    "react-polymorphic-types": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "bun-types": "^1.3.9",
    "eslint": "^9.19.0",
    "eslint-config-dolmios": "^2.1.8",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "css-in-js",
    "build-time",
    "zero-runtime",
    "atomic-css",
    "swc",
    "swc-plugin",
    "stitches-alternative",
    "react",
    "nextjs",
    "typescript",
    "design-system",
    "variants"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "prettier": "eslint-config-dolmios/configs/prettier",
  "scripts": {
    "build": "bun run tidy && bun --cwd packages/stoop run build:ts",
    "build:stoop-ui": "bun run tidy && bun --cwd packages/stoop-ui run build",
    "build:compiler": "bun --cwd packages/stoop run build:compiler",
    "build:all": "bun run build && bun run build:stoop-ui",
    "build:website": "bun run tidy && bun run build:all && bun --cwd apps/website run build",
    "dev": "bun run build && bun --cwd apps/website dev",
    "dev:playground": "bun run build:all && bun --cwd apps/playground dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "kill": "lsof -ti:3000,420 | xargs kill -9 2>/dev/null || true",
    "lint": "eslint . --fix",
    "tidy": "bun run lint; bun run format",
    "test": "bun --cwd packages/stoop run test:compiler",
    "test:ts": "bun --cwd packages/stoop run test:ts"
  },
  "sideEffects": false,
  "type": "module"
}
