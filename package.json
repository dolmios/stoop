{
  "name": "stoop",
  "description": "A small component library for quickly spinning up a pretty Next.js project.",
  "version": "0.0.8",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "./dist/index.js"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/globals.js",
      "require": "./dist/globals.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "react",
    "ui",
    "nextjs",
    "theme",
    "dark-mode"
  ],
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "clsx": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-dolmios": "^2.0.6",
    "next": "^15.2.3",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:types && bun run build:js && bun run build:css",
    "build:clean": "rm -rf dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --format esm --target browser --sourcemap --external react --external react-dom --naming=directory --loader .css=text",
    "build:types": "tsc --project tsconfig.build.json",
    "build:css": "bun build ./src/styles/globals.css --outdir ./dist --loader .css=text",
    "dev": "bun run next dev",
    "lint": "eslint . --fix",
    "prepare": "bun run build",
    "prettier": "prettier --write ."
  },
  "prettier": "eslint-config-dolmios/configs/prettier"
}
