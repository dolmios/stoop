{
  "name": "stoop",
  "description": "A small component library for quickly spinning up a pretty Next.js project.",
  "version": "0.0.1",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "dependencies": {
    "@vanilla-extract/css": "^1.17.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.22.0",
    "eslint-config-dolmios": "^2.0.6",
    "next": "^15.2.3",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "nextjs",
    "react",
    "ui",
    "vanilla-extract"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "prettier": "eslint-config-dolmios/configs/prettier",
  "scripts": {
    "build": "bun run build:clean && bun run build:types && bun run build:js",
    "build:clean": "rm -rf dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --format esm --target browser --sourcemap",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "bun run next dev",
    "lint": "eslint . --fix",
    "prepare": "bun run build",
    "prettier": "prettier --write ."
  },
  "sideEffects": false,
  "type": "module",
  "types": "./dist/index.d.ts"
}