{
  "name": "stoop",
  "description": "A lightweight, polymorphic React component library with intuitive design tokens and built-in styling system.",
  "version": "0.1.0",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "styled-components",
    "polymorphic",
    "css-in-js",
    "layout",
    "typescript"
  ],
  "devDependencies": {
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "bun-types": "^1.2.19",
    "clsx": "^2.1.1",
    "eslint": "^9.32.0",
    "eslint-config-dolmios": "^2.0.10",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:types && bun run build:js",
    "build:clean": "rm -rf dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target browser --minify --jsx=react --splitting --external react --external react-dom",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist --jsx react-jsx src/index.ts",
    "dev": "bun run build && bun run preview/dev.ts",
    "lint": "eslint src --fix",
    "format": "prettier --write src",
    "prepare": "bun run build",
    "kill": "kill $(lsof -t -i:3000)"
  },
  "prettier": "eslint-config-dolmios/configs/prettier",
  "dependencies": {
    "@floating-ui/dom": "^1.7.3"
  }
}
