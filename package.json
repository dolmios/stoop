{
  "name": "stoop",
  "description": "CSS-in-JS library with type inference, theme creation, and variants support.",
  "version": "0.4.0",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dolmios/stoop.git"
  },
  "bugs": {
    "url": "https://github.com/dolmios/stoop/issues"
  },
  "homepage": "https://github.com/dolmios/stoop#readme",
  "dependencies": {
    "react-polymorphic-types": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "eslint-config-dolmios": "^2.0.13",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "css variables",
    "css-in-ts",
    "css-in-ts alternative",
    "css-in-js",
    "css-in-js alternative",
    "emotion",
    "emotion alternative",
    "lightweight",
    "minimal",
    "next.js",
    "nextjs",
    "performance",
    "react",
    "react styling",
    "stitches",
    "stitches alternative",
    "stitches-alternative",
    "styled-components",
    "styled-components alternative",
    "styling",
    "theme",
    "theme switching",
    "type-safe",
    "typescript",
    "variants"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "prettier": "eslint-config-dolmios/configs/prettier",
  "scripts": {
    "build": "bun run tidy && bun --cwd packages/stoop run build",
    "build:stoop-ui": "bun run tidy && bun --cwd packages/stoop-ui run build",
    "build:all": "bun run build && bun run build:stoop-ui",
    "build:website": "bun run tidy && bun run build:all && bun --cwd apps/website run build",
    "dev": "bun run build:all && bun --cwd apps/website dev",
    "dev:playground": "bun run build:all && bun --cwd apps/playground dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "kill": "lsof -ti:3000,420 | xargs kill -9 2>/dev/null || true",
    "lint": "eslint . --fix",
    "publish": "node scripts/publish.js",
    "publish:stoop-ui": "node scripts/publish-ui.js",
    "tidy": "bun run lint; bun run format",
    "test": "bun --cwd packages/stoop test",
    "test:coverage": "bun --cwd packages/stoop test --coverage",
    "test:watch": "bun --cwd packages/stoop test --watch"
  },
  "sideEffects": false,
  "type": "module"
}
