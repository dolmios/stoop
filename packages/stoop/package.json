{
  "name": "stoop",
  "version": "0.1.0",
  "description": "Build-time CSS-in-JS with Stitches ergonomics. Zero runtime. SWC-powered.",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./next": {
      "import": "./dist/integrations/next.js",
      "types": "./dist/integrations/next.d.ts"
    },
    "./vite": {
      "import": "./dist/integrations/vite.js",
      "types": "./dist/integrations/vite.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/config.d.ts"
    },
    "./plugin": "./target/wasm32-wasip1/release/stoop_compiler.wasm"
  },
  "files": [
    "dist",
    "target/wasm32-wasip1/release/*.wasm"
  ],
  "scripts": {
    "build:compiler": "cargo build --target wasm32-wasip1 --release",
    "build:ts": "tsc",
    "build": "bun run build:compiler && bun run build:ts",
    "test:compiler": "cd compiler && cargo test",
    "test:ts": "vitest run",
    "test": "bun run test:compiler && bun run test:ts",
    "dev": "tsc --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "jiti": "^2.4.2"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "react": "^19.2.4",
    "next": "^16.0.0",
    "vite": "^6.0.0"
  },
  "keywords": [
    "css-in-js",
    "swc",
    "swc-plugin",
    "build-time",
    "zero-runtime",
    "atomic-css",
    "stitches-alternative",
    "typescript",
    "react",
    "nextjs",
    "design-system"
  ]
}
