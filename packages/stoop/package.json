{
  "name": "stoop",
  "description": "CSS-in-JS library with type inference, theme creation, and variants support.",
  "version": "0.6.3",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolmios/stoop.git"
  },
  "bugs": {
    "url": "https://github.com/dolmios/stoop/issues"
  },
  "homepage": "https://github.com/dolmios/stoop#readme",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "bun-types": "^1.3.9",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ssr": {
      "types": "./dist/create-stoop-ssr.d.ts",
      "default": "./dist/create-stoop-ssr.js"
    },
    "./styled": {
      "types": "./dist/api/styled.d.ts",
      "default": "./dist/api/styled.js"
    },
    "./theme-provider": {
      "types": "./dist/api/theme-provider.d.ts",
      "default": "./dist/api/theme-provider.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "css variables",
    "css-in-ts",
    "css-in-ts alternative",
    "css-in-js",
    "css-in-js alternative",
    "emotion",
    "emotion alternative",
    "lightweight",
    "minimal",
    "next.js",
    "nextjs",
    "performance",
    "react",
    "react styling",
    "stitches",
    "stitches alternative",
    "stitches-alternative",
    "styled-components",
    "styled-components alternative",
    "styling",
    "theme",
    "theme switching",
    "type-safe",
    "typescript",
    "variants"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "scripts": {
    "build": "bunx tsc --project tsconfig.build.json",
    "lint": "eslint src --fix",
    "prepare": "bun run build",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch"
  },
  "sideEffects": false,
  "type": "module"
}
