{
  "name": "stoop-ui",
  "version": "0.1.0",
  "description": "UI component library built with stoop",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolmios/stoop.git"
  },
  "bugs": {
    "url": "https://github.com/dolmios/stoop/issues"
  },
  "homepage": "https://github.com/dolmios/stoop#readme",
  "dependencies": {
    "@floating-ui/dom": "^1.7.0",
    "react-polymorphic-types": "^2.0.0",
    "stoop": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "bun-types": "^1.2.6",
    "typescript": "^5.7.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "default": "./dist/client.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "stoop",
    "design-system"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@floating-ui/dom": "^1.7.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:types",
    "build:clean": "rm -rf dist",
    "build:js": "NODE_ENV=production bun build ./src/index.ts --outdir ./dist --target node --minify --jsx=automatic --splitting --external react --external react-dom --external react/jsx-runtime --external stoop --external @floating-ui/dom --define process.env.NODE_ENV='\"production\"'",
    "build:types": "bunx tsc --project tsconfig.build.json",
    "prepare": "bun run build",
    "test": "bun test"
  },
  "sideEffects": false,
  "type": "module"
}
