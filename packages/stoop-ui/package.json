{
  "name": "stoop-ui",
  "version": "0.1.0",
  "description": "Accessible React UI components built with stoop",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
