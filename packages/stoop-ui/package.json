{
  "name": "stoop-ui",
  "version": "0.1.1",
  "description": "UI component library built with stoop",
  "author": "Jackson Dolman <mail@dolmios.com>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolmios/stoop.git"
  },
  "bugs": {
    "url": "https://github.com/dolmios/stoop/issues"
  },
  "homepage": "https://github.com/dolmios/stoop#readme",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "stoop": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "stoop",
    "design-system"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:js && bun run build:types",
    "build:clean": "rm -rf dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target browser --format esm --external react --external react-dom --external react/jsx-runtime --external stoop --external @floating-ui/dom",
    "build:types": "bunx tsc --project tsconfig.build.json --emitDeclarationOnly",
    "test": "bun test"
  },
  "sideEffects": false,
  "type": "module"
}
